@model ApplicationCore.Models.MovieCardResponseModel


<div class="card mb-4">
    @*Margin bottom = 4*@
    @*Something like asp-controller are not part of HTML, it's called Tag Helpers.'*@
    <a asp-controller="Movies" asp-action="Details" asp-route-id="@Model.Id">
        @*Don't directly go to view, first go to controller then action method'*@
        <img src="@Model.PosterUrl" class="img-fluid" alt="@Model.Title" /> @*alt is alternative option if you can not see the image*@
    </a>
</div>